<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lower_rank4_bkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="637dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_rank_bkg"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="187dp"
        android:layout_height="28dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/poppins"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="@string/student_fullname"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lower_rank4_bkg"
        app:layout_constraintEnd_toEndOf="@+id/lower_rank4_bkg"
        app:layout_constraintTop_toTopOf="@+id/lower_rank4_bkg"
        app:layout_constraintVertical_bias="0.6"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/lower_rank_num"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:hint="@string/sub_category_rank"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lower_rank4_bkg"
        app:layout_constraintEnd_toStartOf="@+id/fullname"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/lower_rank4_bkg"
        app:layout_constraintTop_toTopOf="@+id/lower_rank4_bkg"
        app:layout_constraintVertical_bias="0.48"
        tools:ignore="SmallSp,TextContrastCheck,VisualLintOverlap" />

</androidx.constraintlayout.widget.ConstraintLayout>