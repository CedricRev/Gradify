<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PopupFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="313dp"
        android:layout_height="266dp"
        android:background="@drawable/shape_popupbox"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gradify_logo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/img_gradifybigtext"
            android:contentDescription="@string/gradify_logo" />

        <TextView
            android:id="@+id/txtdesc"
            android:layout_width="268dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/popup_desc"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/shape"
                android:layout_width="204dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_rectangle2" />

            <TextView
                android:id="@+id/text"
                android:layout_width="257dp"
                android:layout_height="181dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/create_class"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>