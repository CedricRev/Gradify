<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/auth"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/round_corner"
	android:filterTouchesWhenObscured="true"
	android:textAlignment="center">


	<ImageView
		android:id="@+id/imageView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:contentDescription="@string/background_desc"
		android:scaleType="centerCrop"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.0"
		app:srcCompat="@drawable/img_background2" />

	<TextView
		android:id="@+id/textsignin"
		android:layout_width="166dp"
		android:layout_height="48dp"
		android:layout_marginTop="54dp"
		android:layout_marginBottom="60dp"
		android:background="@drawable/shapesignin_shape"
		android:backgroundTintMode="src_over"
		android:clickable="true"
		android:drawableBottom="@drawable/round_corner"
		android:fontFamily="@font/poppins"
		android:text="@string/sign_in"
		android:textAlignment="inherit"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:textColor="#FF0000"
		android:textDirection="inherit"
		android:textSize="16sp"
		android:textStyle="bold"
		android:visibility="visible"
		app:drawableBottomCompat="@drawable/round_corner"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textremember"

		app:layout_marginBaseline="10dp"
		tools:ignore="MissingConstraints"
		tools:visibility="visible" />

	<TextView
		android:id="@+id/textremember"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="23dp"
		android:layout_marginTop="164dp"
		android:layout_marginBottom="162dp"
		android:text="@string/remember_me"
		android:textColor="@color/shapesignin_color"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="@+id/textInputEditText"
		app:layout_constraintTop_toBottomOf="@+id/textsignup"
		tools:ignore="MissingConstraints" />

	<TextView
		android:id="@+id/textsignup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="28dp"
		android:text="@string/not_a_member_yet"
		android:textColor="@color/shapesignin_color"
		android:textSize="13sp"
		app:layout_constraintEnd_toStartOf="@+id/textteacherlogin"
		app:layout_constraintStart_toStartOf="@+id/textteacherlogin"
		app:layout_constraintTop_toBottomOf="@+id/textteacherlogin"
		tools:ignore="MissingConstraints" />

	<TextView
		android:id="@+id/textteacherlogin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="42dp"
		android:fontFamily="@font/poppins"
		android:gravity="center"
		android:text="@string/teacher_login"
		android:textColor="@color/shapesignin_color"
		android:textSize="24sp"
		app:layout_constraintBottom_toTopOf="@+id/textsignup"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.497"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/img_teacher" />

	<ImageView
		android:id="@+id/img_teacher"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="157dp"
		android:layout_marginBottom="14dp"
		android:contentDescription="@string/background_desc"
		android:src="@drawable/img_teacher_2"
		app:layout_constraintBottom_toTopOf="@+id/textteacherlogin"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.496"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/iconback"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="39dp"
		android:layout_marginTop="58dp"
		android:contentDescription="@string/background_desc"
		android:src="@drawable/iconback"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/textInputLayout"
		android:layout_width="182dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginTop="32dp"
		android:layout_marginEnd="32dp"
		android:layout_marginBottom="32dp"
		android:textColorHint="#E0D3D3"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textsignin">

	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/textInputLayout2"
		android:layout_width="104dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="1dp"
		android:layout_marginTop="19dp"
		android:orientation="vertical"
		app:layout_constraintStart_toStartOf="@+id/imageView"
		app:layout_constraintTop_toTopOf="@+id/editText"
		tools:ignore="MissingConstraints">

	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputEditText
		android:id="@+id/textInputEditText"
		android:layout_width="336dp"
		android:layout_height="61dp"
		android:layout_marginBottom="16dp"
		android:background="#36FFFFFF"
		android:backgroundTint="#36FFEBEE"
		android:backgroundTintMode="src_over"
		android:drawableTint="#36FFFFFF"
		android:hint="   Password"
		android:textColor="#FFFFFF"
		android:textColorHint="#FFFFFF"
		app:layout_constraintBottom_toTopOf="@+id/textremember"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.493"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editText"
		tools:ignore="MissingConstraints" />

	<com.google.android.material.textfield.TextInputEditText
		android:id="@+id/editText"
		android:layout_width="336dp"
		android:layout_height="61dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
		android:background="@drawable/shapesignin_shape"
		android:backgroundTint="#36FFEBEE"
		android:backgroundTintMode="src_over"
		android:drawableTint="#36FFFFFF"
		android:hint="   Username"
		android:textColor="#FFFFFF"
		android:textColorHint="#FFFFFF"
		app:layout_constraintBottom_toTopOf="@+id/textInputEditText"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textsignup"
		tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

